extends base
block content
  form(action="" method="POST" class="container-sm mt-3")
    div(class="form-floating mb-3")
      input(type="text" id="name" name="name" class="form-control" placeholder="xd" required)
      label(for="name") Name
    div(class="form-floating mb-3")
      textarea(name="description" id="description" class="form-control" placeholder="xd")
      label(for="description") Description
    div(class="input-group mb-3")
      span(class="input-group-text") $
      div(class="form-floating")
        input(type="number" step=".01" id="price" name="price" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="19.50" required)
        label(for="price") Price
    div(class="form-floating mb-3")
      input(type="number" id="stock" name="stock" class="form-control" placeholder="5" required)
      label(for="stock") Number in stock
    div(class="form-floating mb-3")
      input(type="url" id="image-url" name="image-url" class="form-control" placeholder="https://images.com/image/1")
      label(for="image-url") Image URL
    fieldset
      legend Categories
      each category in categories
        div(class="form-check form-check-inline")
          input(class="form-check-input" type="checkbox" id=category.id name='category' value=category.id)
          label(class="form-check-label" for=category.id) #{category.name}
    button(type="submit" class="btn btn-success") Create


  