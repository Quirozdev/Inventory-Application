extends base

block content
  a(href='/categories/create') Create Category
  div(class='row')
  each category in categories
    div(class='col')
      div(class='card h-100')
        if category.imageUrl
          img(src=category.imageUrl, alt=category.name class='card-img-top')
        else
          img(src='../images/no-image.png', alt='No image' class='card-img-top')
        div(class='card-body')
          h3(class='card-title') #{category.name}
          p(class='card-text') #{category.description}