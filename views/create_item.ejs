<%- include('header') -%>
<form action="" method="POST" enctype="multipart/form-data" class="container-sm mt-3">
  <div class="form-floating mb-3">
    <input type="text" id="name" name="name" class="form-control" placeholder="xd" required>
    <label for="name">Name</label>
  </div>
  <div class="form-floating mb-3">
    <textarea name="description" id="description" class="form-control" placeholder="xd"></textarea>
    <label for="description">Description</label>
  </div>

  <div class="input-group mb-3">
    <span class="input-group-text">$</span>
    <div class="form-floating">
      <input type="number" step=".01" id="price" name="price" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="19.50" required>
      <label for="price">Price</label>
    </div>
  </div>
  <div class="form-floating">
    <input type="number" id="stock" name="stock" class="form-control" placeholder="5" required>
    <label for="stock">Number in stock</label>
  </div>
  <div class="mb-3">
    <label for="image-file" class="form-label">Image</label>
    <input class="form-control" type="file" accept="image/*" id="image-file" name="image-file">
  </div>
  <button type="submit" class="btn btn-success">Create</button>
</form>
<%- include('footer') -%>